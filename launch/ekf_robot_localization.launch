      <param name="frequency" value="30"/> <!-- this value should be fine -->

      <param name="sensor_timeout" value="0.1"/> <!-- this value should be fine -->

      <param name="two_d_mode" value="false"/> <!-- could make this true to stick to XY plane.. -->

